Date: Sun, 20 Jun 2021 18:05:30 +0200
Subject: [PATCH] link against -lclang-cpp

instead of linking against static libraries
---
 src/core/rootcling_stage1/CMakeLists.txt       |  2 +-
 src/interpreter/cling/lib/Utils/CMakeLists.txt | 16 +---------------
 2 files changed, 2 insertions(+), 16 deletions(-)

diff --git a/src/core/rootcling_stage1/CMakeLists.txt b/src/core/rootcling_stage1/CMakeLists.txt
index 5cc5c9c..74ddc0e 100644
--- a/src/core/rootcling_stage1/CMakeLists.txt
+++ b/src/core/rootcling_stage1/CMakeLists.txt
@@ -35,7 +35,7 @@ ROOT_EXECUTABLE(rootcling_stage1 src/rootcling_stage1.cxx
                               $<TARGET_OBJECTS:ClingUtils>
                               $<TARGET_OBJECTS:Dictgen>
                               $<TARGET_OBJECTS:Foundation_Stage1>
-                              LIBRARIES ${CLING_LIBRARIES} ${LINK_LIBS} ${CMAKE_DL_LIBS} ${CMAKE_THREAD_LIBS_INIT}
+                              LIBRARIES ${CLING_LIBRARIES} -lclang-cpp ${CMAKE_DL_LIBS} ${CMAKE_THREAD_LIBS_INIT}
                               NOINSTALL)
 set_target_properties(rootcling_stage1 PROPERTIES RUNTIME_OUTPUT_DIRECTORY src)
 add_dependencies(rootcling_stage1 ClingUtils)
diff --git a/src/interpreter/cling/lib/Utils/CMakeLists.txt b/src/interpreter/cling/lib/Utils/CMakeLists.txt
index 327c9ff..2ef20b0 100644
--- a/src/interpreter/cling/lib/Utils/CMakeLists.txt
+++ b/src/interpreter/cling/lib/Utils/CMakeLists.txt
@@ -26,21 +26,7 @@ set(LLVM_LINK_COMPONENTS
   ${LLVM_TARGETS_TO_BUILD}
 )
 
-set(LIBS
-  clangCodeGen
-  clangDriver
-  clangFrontend
-  clangParse
-  clangSema
-  clangAnalysis
-  clangEdit
-  clangRewrite
-  clangRewriteFrontend
-  clangSerialization
-  clangAST
-  clangBasic
-  clangLex
-)
+set(LIBS)
 
 find_library(DL_LIBRARY_PATH dl)
 if (DL_LIBRARY_PATH)
